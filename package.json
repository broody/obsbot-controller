{
  "name": "obsbot-controller",
  "version": "1.0.0",
  "description": "OBSBOT Webcam Controller for Linux",
  "main": "dist/main/index.js",
  "scripts": {
    "build:native": "node-gyp rebuild",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:native && npm run build:main && npm run build:renderer",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "start": "electron . --no-sandbox",
    "rebuild": "electron-rebuild"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.obsbot.controller",
    "productName": "OBSBOT Controller",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
